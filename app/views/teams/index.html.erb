<p id="notice"><%= notice %></p>

<h1><%= I18n.t('team.title') %></h1>
<br>
<%= link_to I18n.t('team.new'), new_team_path, class: 'btn btn-info' %>
<br><br>

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
  <thead>
    <tr>
      <th><%= I18n.t('team.image') %></th>
      <th><%= I18n.t('team.name') %></th>
      <th><%= I18n.t('team.city') %></th>
      <th><%= I18n.t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= image_tag(team.image) if team.image.attached? %></td>
        <td><%= team.name %></td>
        <td><%= team.city %></td>
        <td>
          <%= link_to I18n.t('show'), team %> |
          <%= link_to I18n.t('edit'), edit_team_path(team) %> |
          <%= link_to I18n.t('destroy'), team, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
