<div class="container">
  <%= search_form_for @query, url: standings_path, method: :get do |f| %>
    <h2>Standings</h2>
    <div class="row">
      <div class="col-sm-6">
        <%= f.select :game_session_id_eq, @seasons,
                     { include_blank: false, prompt: true },
                     { class: 'select2 form-control ja-search' } %>
      </div>
      <div class="col-sm-6">
        <%= f.submit 'Look', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<br/>
<% unless @standings.nil? %>
  <% if @standings.empty? %>
    <div class="container">
      <h2>No standings data found.</h2>
    </div>
  <% else %>
    <div id="profile-table" class="container">
      <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
          <th>Team</th>
          <th>Match played</th>
          <th>Win</th>
          <th>Lose</th>
          <th>Draw</th>
          <th>GF</th>
          <th>GA</th>
          <th>GD</th>
          <th>Point</th>
        </tr>
        </thead>

        <tbody>
        <% @standings.each do |item| %>
          <tr>
            <td><%= item.team %></td>
            <td><%= item.match_played %></td>
            <td><%= item.win %></td>
            <td><%= item.lose %></td>
            <td><%= item.draw %></td>
            <td><%= item.gf %></td>
            <td><%= item.ga %></td>
            <td><%= item.gd %></td>
            <td><%= point_calc(item.win, item.draw) %></td>
          </tr>
        <% end %>
        <tbody>
        </table>
  <% end %>
  </div>
<% end %>
