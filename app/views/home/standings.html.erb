<div class="container">
  <%= search_form_for @query, url: standings_path, method: :get do |f| %>
    <h2><%= I18n.t('standing.title') %></h2>
    <div class="row">
      <div class="col-sm-6">
        <%= f.select :game_session_id_eq, @seasons,
                     { include_blank: false, prompt: true },
                     { class: 'select2 form-control ja-search' } %>
      </div>
      <div class="col-sm-6">
        <%= f.submit I18n.t('standing.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>

<br/>
<% unless @standings.nil? %>
  <% if @standings.empty? %>
    <div class="container">
      <h2>No standings data found.</h2>
    </div>
  <% else %>
    <div id="profile-table" class="container">
      <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
        <tr>
          <th><%= I18n.t('standing.team') %></th>
          <th><%= I18n.t('standing.match_played') %></th>
          <th><%= I18n.t('standing.win') %></th>
          <th><%= I18n.t('standing.lose') %></th>
          <th><%= I18n.t('standing.draw') %></th>
          <th><%= I18n.t('standing.gf') %></th>
          <th><%= I18n.t('standing.ga') %></th>
          <th><%= I18n.t('standing.gd') %></th>
          <th><%= I18n.t('standing.point') %></th>
        </tr>
        </thead>

        <tbody>
        <% @standings.each do |item| %>
          <tr>
            <td><%= item.team %></td>
            <td><%= item.match_played %></td>
            <td><%= item.win %></td>
            <td><%= item.lose %></td>
            <td><%= item.draw %></td>
            <td><%= item.gf %></td>
            <td><%= item.ga %></td>
            <td><%= item.gd %></td>
            <td><%= point_calc(item.win, item.draw) %></td>
          </tr>
        <% end %>
        <tbody>
        </table>
  <% end %>
  </div>
<% end %>
