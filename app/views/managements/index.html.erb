<p id="notice"><%= notice %></p>

<h1>Managements</h1>

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
  <thead>
    <tr>
      <th>Team</th>
      <th>Player</th>
      <th>Season</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @managements.each do |management| %>
      <tr>
        <td><%= management.team.try(:name) %></td>
        <td><%= management.player.try(:name) %></td>
        <td><%= management.game_session.try(:period) %></td>
        <td><%= link_to 'Show', management %></td>
        <td><%= link_to 'Edit', edit_management_path(management) %></td>
        <td><%= link_to 'Destroy', management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Management', new_management_path, class: 'btn btn-info' %>
