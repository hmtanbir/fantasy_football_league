<p id="notice"><%= notice %></p>

<h1><%= I18n.t('management.title') %></h1>
<br><br>
<%= link_to I18n.t('management.new'), new_management_path, class: 'btn btn-info' %>
<br><br>

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
  <thead>
    <tr>
      <th><%= I18n.t('management.team') %></th>
      <th><%= I18n.t('management.player') %></th>
      <th><%= I18n.t('management.season') %></th>
      <th><%= I18n.t('.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @managements.each do |management| %>
      <tr>
        <td><%= management.team.try(:name) %></td>
        <td><%= management.player.try(:name) %></td>
        <td><%= management.game_session.try(:period) %></td>
        <td><%= link_to I18n.t('show'), management %> |
        <%= link_to I18n.t('destroy'), management, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
